<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:shrinkColumns="*"
    android:stretchColumns="*" >

    <TableRow
        android:id="@+id/tableRow1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/xtxtClientName"
            android:layout_width="120dp"
            android:layout_weight="1"
            android:text="text1"
            android:layout_marginRight="5dp"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/xtxtCustomerName"
            android:layout_width="120dp"
            android:layout_weight="1"
             android:layout_marginRight="5dp"
            android:text="text2"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/xtxtContact"
            android:layout_width="90dp"
            android:layout_weight="1" 
            android:layout_marginRight="10dp"
            android:text="text3"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/xtxtArea"
            android:layout_width="80dp"
            android:layout_weight="1"
             android:layout_marginRight="5dp"
             android:layout_marginLeft="8dp"
            android:text="text5"
            android:textColor="#000000"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/xtxtBranch"
            android:layout_width="90dp"
            android:layout_weight="1"
             android:layout_marginLeft="8dp"
             android:layout_marginRight="5dp"
            android:text="text4"
            android:visibility="gone"
            android:textColor="#000000"
            android:textSize="18dp" />

       
        <TextView
            android:id="@+id/xtxtCaseNo"
            android:layout_width="60dp"
            android:layout_marginRight="20dp" 
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:text="text6"
            android:textColor="#000000"
            android:textSize="18dp" />

        <LinearLayout
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:orientation="vertical">

            <Button
                android:id="@+id/xbtnSynoffline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:textSize="10sp"
                android:visibility="visible"
                android:text="Sync Offline"

                android:padding="3dp"/>
            <Button
                android:id="@+id/xbtnUpdateOnline"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@color/gray"
                android:textSize="10sp"
                android:visibility="visible"
                android:text="Update Online"
                android:padding="3dp"/>

        </LinearLayout>
        <Button
            android:id="@+id/xbtnReleaseReq"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/gray"
            android:textSize="11sp"
            android:gravity="center"
            android:visibility="visible"
            android:text="Release Req" />


    </TableRow>

</TableLayout>