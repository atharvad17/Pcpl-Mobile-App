<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#00000000" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_margin="10dp"
        android:background="@drawable/custom_rectangle"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/xtxttitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Title"
            android:textAppearance="?android:attr/textAppearanceMedium" />

        <LinearLayout
            android:id="@+id/xlinlayrec"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:padding="8dp"
            android:background="@drawable/custom_bottomrec"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/xrellayCustomer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3" >

                <TextView
                    android:id="@+id/xtxtcustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/customer"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/Black" />

                <TextView
                    android:id="@+id/xedtCustomer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittextstyle2"
                    android:padding="8dp"
                    android:text="@string/customer"
                    android:textColor="@color/Black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/xrellayMobileno"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3" >

                <TextView
                    android:id="@+id/xtxtArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/Area"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/Black" />

                <TextView
                    android:id="@+id/xedtArea"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittextstyle2"
                    android:padding="8dp"
                    android:textColor="@color/Black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/xrellayApplicant"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3" >

                <TextView
                    android:id="@+id/xtxtApplicantName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="Applicant Name"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/Black" />

                <TextView
                    android:id="@+id/xedtApplicantName"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittextstyle2"
                    android:padding="8dp"
                    android:textColor="@color/Black" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/xrellayBranch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3" >

                <TextView
                    android:id="@+id/xtxtMobileNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/branch"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/Black" />

                <TextView
                    android:id="@+id/xedtBranch"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/edittextstyle2"
                    android:padding="8dp"
                    android:textColor="@color/Black" />
            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:weightSum="3"
                android:visibility="gone">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:gravity="center"
                    android:text="@string/address"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/Black" />

                <TextView
                    android:id="@+id/xedtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittextstyle2"
                    android:gravity="left"
                    android:lines="4"
                    android:minLines="4"
                    android:padding="8dp"
                     android:textColor="@color/Black"
                    android:scrollHorizontally="false"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                     android:text="@string/address"
                    tools:ignore="DuplicateIds" />

                <TextView
                    android:id="@+id/xedtAddress"
                    android:layout_width="match_parent"
                    android:layout_height="90dp"
                    android:layout_marginLeft="1dp"
                    android:layout_weight="1"
                    android:background="@drawable/edittextstyle2"
                    android:gravity="left"
                    android:lines="4"
                    android:minLines="4"
                    android:padding="8dp"
                    android:textColor="@color/Black"
                    android:scrollHorizontally="false"
                    android:scrollbars="vertical"
                    android:singleLine="false"
                    android:text="@string/address"
                    tools:ignore="DuplicateIds" />

            </LinearLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:gravity="center" >

                <Button
                    android:id="@+id/xbtnok"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:background="@drawable/button_background"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="Assign"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/xbtncancel"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_toRightOf="@+id/xbtnok"
                    android:background="@drawable/button_background"
                    android:paddingLeft="8dp"
                    android:paddingRight="8dp"
                    android:text="@string/cancel"
                    android:textColor="#FFFFFF" />
            </RelativeLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>